<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- Configuration du contexte de l'application -->
    <display-name>Gestion des Appr√©ciations</display-name>

    <!-- Configuration de la Servlet AppreciationController -->
    <servlet>
        <servlet-name>AppreciationController</servlet-name>
        <servlet-class>org.servlet.livre_dor.controllers.AppreciationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AppreciationController</servlet-name>
        <url-pattern>/appreciations</url-pattern>
    </servlet-mapping>

    <!-- Configuration de la page d'accueil -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
